<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <Button
        android:id="@+id/ConfigurePreferences"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Configure Preferences" />

    <Button
        android:id="@+id/RetrieveFromServer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Retrieve assignment list from server" />

    <Button
        android:id="@+id/ManageAssignment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Manage Assignment" />

</LinearLayout>